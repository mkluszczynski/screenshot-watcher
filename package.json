{
  "name": "screenshot_watcher",
  "module": "src/main.ts",
  "scripts": {
    "compile": "bun build --compile --outfile=out/screenshot-watcher src/main.ts",
    "compile:linux": "bun build --compile --target=bun-linux-x64 ./src/main.ts --outfile out/screenshot-watcher-linux",
    "compile:windows": "bun build --compile --target=bun-windows-x64 ./src/main.ts --outfile out/screenshot-watcher-windows",
    "compile:mac": "bun build --compile --target=bun-darwin-x64 ./src/main.ts --outfile out/screenshot-watcher-mac",
    "compile:mac:arm": "bun build --compile --target=bun-darwin-arm64 ./src/main.ts --outfile out/screenshot-watcher-mac-arm"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node-notifier": "^8.0.5",
    "@types/ssh2-sftp-client": "^9.0.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "type": "module",
  "dependencies": {
    "clipboardy": "^4.0.0",
    "node-notifier": "^10.0.1",
    "ssh2-sftp-client": "^11.0.0"
  }
}